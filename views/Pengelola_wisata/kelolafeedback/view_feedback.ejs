<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Tambah Data Pengelola wisata
        </h1>
        <ol class="breadcrumb">
            <li><a href="dashboard"><i class="fa fa-dashboard"></i> Dashboard</a></li>
            <li class="active">Pengelola wisata</li>
        </ol>
        <% if(alert.message != '') { %>
        <br>
        <div class="alert alert-<%= alert.status %>" style="text-align: center;">
            <strong><%= alert.message %></strong>
        </div>
        <% } %>
    </section>


    <!-- Main content -->
    <section class="content">

        <div class="row">
            <div class="col-xs-12">
                <div class="box">
                    <!-- /.box-header -->
                    <div class="box-header">
                        <h3 class="box-title">Data Pengelola wisata</h3>
                    </div>

                    <div class="box-body">
                        <div style="margin: 0 20px 20px 20px;">
                            <!-- <button class="btn btn-success">Tambah</button> -->
                            <!-- <button type="button" class="btn btn-success" data-toggle="modal"
                                data-target="#add-pengelola">
                                Tambah
                            </button> -->
                        </div> -->
                        <table id="feedback"  class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <th>No</th>
                                    <th>Feedback</th>
                                    <th>Tanggal</th>
                                    
                                    <th>Aksi</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% for (let i = 0; i < feedback.length; i++ ) { %>
                                <tr>
                                    <td><%= i + 1 %></td>
                                    <td><%= feedback[i].feedback %></td>
                                    <td><%= feedback[i].tgl_isi %></td>
                                    <td style="width: 150px;">
                                        <!-- <a href="javascript:void(0);" type="button" class="btn btn-warning btn-sm edit"
                                            data-id_pengelola="<%= pengelola_wisata[i].id_pengelola %>"
                                            data-NamaPengelola="<%= pengelola_wisata[i].NamaPengelola %>"
                                            data-email="<%= pengelola_wisata[i].email %>"
                                            data-password="<%= pengelola_wisata[i].password %>">
                                            <span class="glyphicon glyphicon-pencil"></span>
                                            Edit
                                        </a> -->
                                        <button class="btn btn-danger btn-sm"
                                            onclick="delete_feedback(`<%= feedback[i].id_feedback %>`)"
                                            data-id-feedback="<%= feedback[i].id_feedback %>">
                                            <span class="glyphicon glyphicon-remove"></span>
                                            Hapus
                                        </button>
                                    </td>
                                </tr>
                                <% } %>
                            </tbody>
                        </table>
                    </div>
                    <!-- /.box-body -->
                </div>
                <!-- /.box -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </section>
    <!-- /.content -->
</div>

