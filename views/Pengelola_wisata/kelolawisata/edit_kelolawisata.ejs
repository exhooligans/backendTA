<!-- Modal Update Product-->
<form action="/pengelola/kelola_wisata/edit" method="post">
    <div class="modal fade" id="edit-kelolawisata" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
        aria-hidden="true">
        <div class="modal-dialog " role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <heading class="modal-title" id="exampleModalLabel">Edit Wisata</heading>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <input type="hidden" class="id_wisata" required name="id_wisata">
                    <div class="form-group">
                        <label>Nama Wisata :</label>
                        <input type="text" id="NamaWisata" name="NamaWisata" class="form-control NamaWisata"
                            placeholder="Masukan Nama Wisata" required>
                    </div>
                    <div class="form-group">
                        <label>Foto Wisata :</label>
                        <input type="text" id="FotoWisata" name="FotoWisata" class="form-control FotoWisata"
                            placeholder="Masukan Foto" required>
                    </div>
                    <div class="form-group">
                        <label>AlamatWisata :</label>
                        <input type="text" id="AlamatWisata" name="AlamatWisata" class="form-control AlamatWisata"
                            placeholder="Masukan Alamat" required>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary btn-sm" data-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-primary btn-sm">Simpan</button>
                    </div>
                </div>
            </div>
        </div>
</form>