<%- include ../partials/header.ejs %>
<%- include ../partials/sidebar.ejs %>
<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Edit Data Wisatawan
        </h1>
        <ol class="breadcrumb">
            <li><a href="dashboard"><i class="fa fa-dashboard"></i> Dashboard</a></li>
            <li class="active"> Edit Data Wisatawan</li>
        </ol>
        <% if(alert.message != '') { %>
        <br>
        <div class="alert alert-<%= alert.status %>" style="text-align: center;">
            <strong><%= alert.message %></strong>
        </div>
        <% } %>
    </section>

    <!-- Main content -->
    <section class="content">

        <div class="row">
            <div class="col-xs-12">
                <div class="box">
                    <!-- /.box-header -->
                    <div class="box-header">
                        <th style="width: 50%;"> Edit Data Wisatawan</th>
                        <th class="box-title" style="margin-left: 80%;">
                            <!-- <button class="btn btn-success">Tambah</button> -->
                        </th>
                    </div>

                    <div class="box-body" style="height: 370px; overflow-y: scroll; overflow-x: scroll;">
                        <form action="/admin/wisatawan/edit/<%=  wisatawan.id_wisatawan %>" method="post"
                            enctype="multipart/form-data">
                            <input type="hidden" class="id_wisatawan" required name="id_wisatawan"
                                value="<%=  wisatawan.id_wisatawan %>">
                            <div class="form-group">
                                <label>Nama Wisatawan :</label>
                                <input type="text" id="nama" name="nama" class="form-control nama"
                                    placeholder="Masukan Nama Wisatawan" value="<%=  wisatawan.nama %>" required>
                            </div>
                            <div class="form-group">

                                <label>Email :</label>
                                <input type="text" id="email" name="email" class="form-control email"
                                    placeholder="Masukan Email" value="<%= wisatawan.email%>" required>
                            </div>
                            <div class="form-group">
                                <label>Password :</label>
                                <input type="text" id="password" name="password" class="form-control password"
                                    placeholder="Masukan password" value="<%= wisatawan.password %>" required>
                            </div>

                            <button type="submit" class="btn btn-primary">Simpan</button>
                    </div>
                    </form>
                    <!-- /.box-body -->
                </div>
                <!-- /.box -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </section>
    <!-- /.content -->
</div>
<%- include ../partials/footer.ejs %>













<form action="/admin/wisatawan/edit" method="post">
    <div class="modal fade" id="edit-modal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
        aria-hidden="true">
        <div class="modal-dialog " role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <heading class="modal-title" id="exampleModalLabel">Edit Wisatawan</heading>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <input type="hidden" class="id_wisatawan" required name="id_wisatawan">
                    <div class="form-group">
                        <label>Nama Wisatawan :</label>
                        <input type="text" id="nama" name="nama" class="form-control nama"
                            placeholder="Masukan Nama Wisatawan" required>
                    </div>
                    <div class="form-group">
                        <label>Nomor Telepon :</label>
                        <input type="text" id="notelp" name="notelp" class="form-control notelp"
                            placeholder="Masukan Nomor Telepon" required>
                    </div>
                    <div class="form-group">
                        <label>Email :</label>
                        <input type="text" id="email" name="email" class="form-control email"
                            placeholder="Masukan Email" required>
                    </div>
                    <div class="form-group">
                        <label>Password :</label>
                        <input type="text" id="password" name="password" class="form-control password"
                            placeholder="Masukan Password" required>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary btn-sm" data-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-primary btn-sm">Simpan</button>
                    </div>
                </div>
            </div>
        </div>
</form>