<!-- Modal Update Product-->
<form action="/admin/pengelola_wisata/edit" method="post">
    <div class="modal fade" id="edit-pengelola" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
        aria-hidden="true">
        <div class="modal-dialog " role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <heading class="modal-title" id="exampleModalLabel">Edit pengelola_wisata</heading>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <input type="hidden" class="id_pengelola" required name="id_pengelola">
                    <div class="form-group">
                        <label>Nama Pengelola :</label>
                        <input type="text" id="namapengelola" name="namapengelola" class="form-control namapengelola"
                            placeholder="Masukan Nama Pengelola" required>
                    </div>
                    <div class="form-group">
                        <label>Email :</label>
                        <input type="text" id="email" name="email" class="form-control email"
                            placeholder="Masukan Email" required>
                    </div>
                    <div class="form-group">
                        <label>Password :</label>
                        <input type="text" id="password" name="password" class="form-control password"
                            placeholder="Masukan Password" required>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary btn-sm" data-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-primary btn-sm">Simpan</button>
                    </div>
                </div>
            </div>
        </div>
</form>