<%- include ../partials/header.ejs %>
<%- include ../partials/sidebar.ejs %>
<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Edit Data Pengelola Wisata
        </h1>
        <ol class="breadcrumb">
            <li><a href="dashboard"><i class="fa fa-dashboard"></i> Dashboard</a></li>
            <li class="active"> Edit Data Pengelola Wisata</li>
        </ol>
        <% if(alert.message != '') { %>
        <br>
        <div class="alert alert-<%= alert.status %>" style="text-align: center;">
            <strong><%= alert.message %></strong>
        </div>
        <% } %>
    </section>

    <!-- Main content -->
    <section class="content">

        <div class="row">
            <div class="col-xs-12">
                <div class="box">
                    <!-- /.box-header -->
                    <div class="box-header">
                        <th style="width: 50%;"> Edit Data Pengelola Wisata</th>
                        <th class="box-title" style="margin-left: 80%;">
                            <!-- <button class="btn btn-success">Tambah</button> -->
                        </th>
                    </div>

                    <div class="box-body" style="height: 370px; overflow-y: scroll; overflow-x: scroll;">
                        <form action="/admin/pengelola_wisata/edit/<%=  pengelola_wisata.id_pengelola %>" method="post"
                            enctype="multipart/form-data">
                            <input type="hidden" class="id_pengelola" required name="id_pengelola"
                                value="<%=  pengelola_wisata.id_pengelola %>">
                            <div class="form-group">
                                <label>Nama Pengelola :</label>
                                <input type="text" id="NamaPengelola" name="NamaPengelola"
                                    class="form-control NamaPengelola" placeholder="Masukan Nama Wisata"
                                    value="<%=  pengelola_wisata.NamaPengelola %>" required>
                            </div>
                            <div class="form-group">

                                <label>Email :</label>
                                <input type="text" id="email" name="email" class="form-control email"
                                    placeholder="Masukan Email" value="<%= pengelola_wisata.email%>" required>
                            </div>
                            <div class="form-group">
                                <label>Password :</label>
                                <input type="text" id="password" name="password" class="form-control password"
                                    placeholder="Masukan password" value="<%= pengelola_wisata.password %>" required>
                            </div>

                            <button type="submit" class="btn btn-primary">Simpan</button>
                    </div>
                    </form>
                    <!-- /.box-body -->
                </div>
                <!-- /.box -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </section>
    <!-- /.content -->
</div>
<%- include ../partials/footer.ejs %>